<Manager>:
    Screen:
        name: "main"
        BoxLayout:
            orientation: 'vertical'

            MDToolbar:
                title: 'SCREEN 1'

            ScrollView:
                MDList:
                    id: list_one

            MDFloatingActionButton:
                elevation: 8
                icon: 'plus'
                pos_hint: {'center_x': .5}
                on_release:
                    root.current = 'window_add'
                    #transition.direction = 'up'

    Screen:
        name: 'window_add'
        BoxLayout:
            orientation: 'vertical'
    
            MDToolbar:
                title: 'Neues Element'
    
            BoxLayout:
                orientation: 'vertical'
                Label:
                    text: "Menge"
                    color: 0,0,0,1
                    size_hint: 1,0.1
                
                TextInput:
                    id: count
                    pos_hint: {"center_x": .5, "center_y": .5}
                    multiline: False
                    input_filter: "int"
                    size_hint: 0.9,0.15
                    
                BoxLayout:
                    size_hint: 1,0.15
                    orientation: "horizontal"
                    Button:
                        text: "1"
                        on_release:
                            count.text = "1"
                    Button:
                        text: "2"
                        on_release:
                            count.text = "2"
                    Button:
                        text: "3"
                        on_release:
                            count.text = "3"
                    Button:
                        text: "4"
                        on_release:
                            count.text = "4"
                    Button:
                        text: "5"
                        on_release:
                            count.text = "5"
                    Button:
                        text: "6"
                        on_release:
                            count.text = "6"
                    Button:
                        text: "7"
                        on_release:
                            count.text = "7"
                Label:
                    size_hint: 1,0.1
                Label:
                    text: "Produkt"
                    color: 0,0,0,1
                    size_hint: 1,0.1
                TextInput:
                    id: Produkt
                    pos_hint: {"center_x": .5, "center_y": .5}
                    multiline: False
                    size_hint: 0.9,0.15
                MDList:
                    id: list_Produkt
                Label:
            
            
            MDFloatingActionButton:
                icon: "android"
                md_bg_color: app.theme_cls.primary_color
                pos_hint: {"center_x": .1, "center_y": .5}
                on_release:
                    root.current = 'main'
                    #root.manager.transition.direction = 'down'
                    
            MDFloatingActionButton:
                icon: "plus"
                pos_hint: {"center_x": .5, "center_y": .5}
                md_bg_color: app.theme_cls.primary_color
                on_release:
                    root.new_element(count.text, Produkt.text)
                    count.text = ""
                    Produkt.text = ""
                    app.root.current = 'main'
                    #root.manager.transition.direction = 'down'

